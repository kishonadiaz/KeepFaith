<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/outerrootcontainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--Root container-->


    <RelativeLayout
        android:id="@+id/root_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <!--View while view is collapsed-->
        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_close"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:id="@+id/collapse_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:visibility="visible">

            <!--Close button-->

            <!--Icon of floating widget -->
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/GifImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/smooch" />

            <!--<com.example.myapplication.GifImageView-->
            <!--android:id="@+id/GifImageView"-->
            <!--android:layout_width="60dp"-->
            <!--android:layout_height="60dp"-->

            <!--/>-->


        </RelativeLayout>

        <!--View while view is expanded-->
        <RelativeLayout
            android:id="@+id/expanded_container"
            android:layout_width="match_parent"
            android:layout_height="411dp"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="397dp"
                android:layout_centerInParent="true"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"></LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/messageboarder"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/close_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_close" />

                <ImageView
                    android:id="@+id/open_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_open" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/messageboarder"
                android:padding="50px">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border"
                    android:text="Date Posted: DATE" />

                <ImageView
                    android:id="@+id/favicon"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="false"

                    android:cropToPadding="false"
                    android:src="@drawable/fav" />

                <ImageView
                    android:id="@+id/likeicon"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="62dp"
                    android:adjustViewBounds="false"

                    android:cropToPadding="false"
                    android:src="@drawable/like_unhighlighted" />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>



</FrameLayout>